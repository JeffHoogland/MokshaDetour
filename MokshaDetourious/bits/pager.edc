		}
		program {
			name: "unfocused";
			signal: "e,state,unselected";
			source: "e";
			action: STATE_SET "default" 0.0;
			target: "focus";
			target: "focus2";
			target: "over";
		}
	}
}

group {
	name: "e/modules/pager/window";
	images {
		image: "images/pager_win_focused.png" COMP;
		image: "images/pager_win_unfocused.png" COMP;
	}
	parts {
		part { name: "urgent-clipper";
			type: RECT;
			description { state: "default" 0.0;
				rel1.relative: -1 -1;
				rel2.relative: 2 2;
			}
			description { state: "urgent" 0.0;
				inherit: "default" 0.0;
				color: 239 110 32 255;
			}
		}
		part {
			name: "pager_window";
			type: IMAGE;
			clip_to: "urgent-clipper";
			description {
				state: "default" 0.0;
				rel1 {
					relative: 0.0 0.0;
					offset: -3 -2;
				}
				rel2 {
					relative: 1.0 1.0;
					offset: 1 0;
				}
				image {
					normal: "images/pager_win_unfocused.png";
					border: 5 5 5 6;
				}
			}
			description {
				state: "focused" 0.0;
				inherit: "default" 0.0;
				image {
					normal: "images/pager_win_focused.png";
					border: 5 5 5 6;
				}
				color_class: "focus";
			}
		}

		part { name: "icon-clipper";
			type: RECT;
			description { state: "default" 0.0;
				color: 200 200 200 255;
			}
			description { state: "focused" 0.0;
				color: 255 255 255 255;
			}
		}
		part {
			name: "e.swallow.icon";
			type: SWALLOW;
			clip_to: "icon-clipper";
			description {
				state: "default" 0.0;
				align: 1.0 1.0;
				max: 24 24;
				aspect: 1.0 1.0;
				aspect_preference: BOTH;
				rel1 {
					to: "pager_window";
					offset: 6 6;
				}
				rel2 {
					to: "pager_window";
					offset: -7 -7;
				}
				visible: 1;
			}
			description {
				state: "hidden" 0.0;
				inherit: "default" 0.0;
				visible: 0;
			}
		}
		part {
			name: "e.swallow.content";
			type: SWALLOW;
			mouse_events: 0;
			description {
				state: "default" 0.0;
				visible: 1;
				rel1 {
					to: "pager_window";
					offset: 2 2;
				}
				rel2 {
					to: "pager_window";
					offset: -3 -3;
				}
			}
			description {
				state: "hidden" 0.0;
				inherit: "default" 0.0;
				visible: 0;
			}
		}
	}
	programs {
		program {
			signal: "load";
			after: "resize";
		}
		program {
			name: "resize";
			signal: "resize";
			script {
				new x, y, w, h;
				get_geometry(PART:"e.swallow.icon", x, y, w, h);
				if ((w < 16) || (h < 16))
					set_state(PART:"e.swallow.icon", "hidden", 0.0);
				else
					set_state(PART:"e.swallow.icon", "default", 0.0);
			}
		}
		program {
			name: "preview";
			signal: "e,preview,on";
			source: "e";
			script {
				set_state(PART:"e.swallow.content", "default", 0.0);
				set_state(PART:"e.swallow.icon", "hidden", 0.0);
			}
		}
		program {
			name: "preview_off";
			signal: "e,preview,off";
			source: "e";
			script {
				set_state(PART:"e.swallow.content", "hidden", 0.0);
				set_state(PART:"e.swallow.icon", "default", 0.0);
			}
		}
		program {
			name: "focused";
			signal: "e,state,focused";
			source: "e";
			action: STATE_SET "focused" 0.0;
			target: "pager_window";
			target: "icon-clipper";
		}
		program {
			name: "unfocused";
			signal: "e,state,unfocused";
			source: "e";
			action: STATE_SET "default" 0.0;
			target: "pager_window";
			target: "icon-clipper";
		}
		program {
			name: "go";
			signal: "e,state,urgent";
			source: "e";
			action: STATE_SET "default" 0.0;
			target: "urgent-clipper";
			after: "go2";
		}
		program {
			name: "go2";
			action: STATE_SET "urgent" 0.0;
			transition: LINEAR 1.0;
			target: "urgent-clipper";
			after: "go";
		}
		program {
			name: "stop";
			signal: "e,state,not_urgent";
			source: "e";
			action: ACTION_STOP;
			target: "go";
			target: "go2";
			after: "stop2";
		}
		program {
			name: "stop2";
			action: STATE_SET "default" 0.0;
			target: "urgent-clipper";
		}
	}
}
