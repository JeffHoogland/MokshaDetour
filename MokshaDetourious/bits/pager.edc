			mouse_events: 0;
			description {
				state: "default" 0.0;
				rel1.to: "frame";
				rel2.to: "frame";
				rel1.offset: 2 2;
				rel2.offset: -3 -3;
				color: 255 255 255 140;
				color_class: "focus";
				visible: 1;
				}
			description {
				state: "active" 0.0;
				inherit: "default" 0.0;
				visible: 0;
				}
			}
